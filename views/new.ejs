<%- include("partials/header") %>

<div class="ui main text container segment">
  <div class="ui huge header">New Blog</div>
  <form class="ui form" action="/blogs" method="POST">
    <div class="field">
      <label>Title</label>
      <input required type="text" name="blog[title]" placeholder="title">
    </div>
    <div class="field">
      <label>Image</label>
      <input required type="text" name="blog[image]" placeholder="image">
    </div>
    <div class="field">
      <label>Post Content</label>
      <textarea required name="blog[body]" placeholder="post goes here"></textarea>
    </div>
    
    <input class="ui violet big basic button" type="submit" value="Add New Post">
  </form>
</div>

<%- include("partials/footer") %>